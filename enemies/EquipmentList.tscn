[sub_resource type="GDScript" id=1]
script/source = "extends ItemList

signal value_changed(equipment, value)

var can_add = true
var can_remove = true

func can_drop_data(position, data):
	return data is Dictionary and data.has(\"equipment\") and not data.get(\"source\", null) == self

func drop_data(position, data):
	if can_add:
		add_item(data.equipment)
		set_item_metadata(get_item_count() - 1, data.equipment)
		emit_signal(\"value_changed\", data.equipment, true)
		
	if data.source.can_remove:
		data.source.remove_item(data.idx)
		data.source.emit_signal(\"value_changed\", data.equipment, false)
	
func get_drag_data(position):
	print(\"drag data \", position)
	var idx = get_item_at_position(position)
	if idx < 0: return null
	return {\"equipment\": get_item_metadata(idx), \"source\": self, \"idx\": idx}"

